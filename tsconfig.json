{
    "compilerOptions": {
      "resolveJsonModule": true,
      "target": "ES2022",
      "module": "CommonJS",
      "moduleResolution": "node",
      "esModuleInterop": true,
      "outDir": "dist",
      "strict": true,
      "skipLibCheck": true,
      "baseUrl": ".",
      "paths": {
        "*": ["node_modules/*", "src/*"]
      }
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist"]
  }
  